<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<%= search_form_for @q, url: tasks_path, method: :get do |f| %>
  <div>
    <%= f.label :title_or_description_cont, "Keyword" %>
    <%= f.search_field :title_or_description_cont %>
  </div>

  <div>
    <%= f.label :deadline_gteq, "Deadline From" %>
    <%= f.date_field :deadline_gteq %>

    <%= f.label :deadline_lteq, "Deadline To" %>
    <%= f.date_field :deadline_lteq %>
  </div>

  <div>
    <strong>Status:</strong><br>
    <%= f.radio_button :status_eq, '', checked: params.dig(:q, :status_eq).blank? %> Not specified
    <%= f.radio_button :status_eq, 0 %> Todo
    <%= f.radio_button :status_eq, 1 %> Doing
    <%= f.radio_button :status_eq, 2 %> Done
   
  </div>

  <div>
    <%= f.submit 'Search' %>
    <%= link_to 'Clear', tasks_path %>
  </div>
<% end %>





<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th><%= sort_link(@q, :deadline, "Deadline", default_order: :desc) %></th>
    <th colspan="3"></th>
  </tr>
</thead>
 
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
